<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neutral"
    android:padding="16dp">

    <ImageView
        android:id="@+id/assisremote"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/remotrack" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:layout_marginLeft="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/threecloud" />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cloud2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="360dp"
        android:fontFamily="sans-serif"
        android:text="Welcome to RemoTrack"
        android:textSize="14sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="380dp"
        android:fontFamily="sans-serif"
        android:text="Get Ready to Transform Your Remote Work Experience"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/getstarted_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="410dp"
        android:backgroundTint="@color/dark"
        android:fontFamily="@font/alfa_slab_one"
        android:text="GET STARTED"
        android:textColor="@android:color/white" />

    <ProgressBar
        android:id="@+id/loadingCircle"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="460dp"
        android:visibility="gone" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="290dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="500dp"
        android:scaleType="centerCrop"
        android:src="@drawable/twocloud" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/work" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="490dp"
        android:scaleType="centerCrop"
        android:src="@drawable/computer" />

</RelativeLayout>
