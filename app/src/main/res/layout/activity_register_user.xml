<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/assisremote"
            android:layout_width="400dp"
            android:layout_height="120dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/remotrackdark" />

        <ImageView
            android:id="@+id/assisremotes"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/regcloud" />

        <TextView
            android:id="@+id/text_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            android:layout_marginBottom="16dp"
            android:text="Register User"
            android:fontFamily="@font/alfa_slab_one"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image_register"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="100dp"
            android:contentDescription="Register Image"
            android:src="@drawable/employee" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_first_name"
            android:layout_width="300dp"
            android:layout_marginLeft="30sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_register"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/black"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_first_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="First Name"
                android:padding="8dp"
                tools:ignore="UnusedAttribute"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_last_name"
            android:layout_width="300dp"
            android:layout_marginLeft="30sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input_first_name"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/black"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_last_name"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:padding="8dp"
                tools:ignore="UnusedAttribute"/>

        </com.google.android.material.textfield.TextInputLayout>



        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_email"
            android:layout_width="300dp"
            android:layout_marginLeft="30sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input_last_name"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/black"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                tools:ignore="UnusedAttribute"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_password"
            android:layout_width="300dp"
            android:layout_marginLeft="30sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input_email"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/black"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp"
                tools:ignore="UnusedAttribute"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_input_password"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/alfa_slab_one"
            android:padding="12dp"
            android:text="REGISTER"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</ScrollView>
